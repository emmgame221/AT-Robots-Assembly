{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ATRobots Assembly",
	"patterns": [
		{
			"include": "#mnemonics"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"mnemonics": {
			"patterns": [{
				"name": "keyword.control.at2",
				"match": "\\b((?i)NOP|ADD|SUB|INC|DEC|SHL|SHR|ROL|ROR|SAL|SAR|NEG|OR|AND|XOR|NOT|MPY|DIV|MOD|RET|CALL|JMP|CMP|JLS|JGR|JNE|JE|JGE|JLE|JZ|JNZ|JTL|XCHG|DO|LOOP|TEST|MOV|ADDR|GET|PUT|INT|IPO|IN|OPO|OUT|DEL|PUSH|POP|ERR)\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "keyword.other.at2",
				"match": "\\b((?i)Flags|AX|BX|CX|DX|EX|FX|SP)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.at2",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.at2",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.at2",
				"match": ";.*+"
			}]
			
		},
		"labels": {
			"patterns": [{
				"name": "variable.parameter.label.indirect.at2",
				"match": "!\\w*+"
			}, {
				"name": "variable.parameter.label.direct.at2",
				"match": ":\\d{0,5}"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.numeric.decimal.at2",
				"match": "\\b(\\d+)\\b"
			}, {
				"name": "constant.numeric.hex.at2",
				"match": "\\b0x\\h+\\b"
			}, {
				"name": "constant.language.port.at2",
				"match": "(?i)p_(spedometer|heat|compass|turret_ofs|turret_abs|damage|armor|scan|accuracy|radar|random|rand|throttle|ofs_turret|trotate|abs_turret|taim|steering|weap|weapon|fire|sonar|arc|scanarc|overburn|transponder|shutdown|channel|minelayer|minetrigger|shield|shields)"
			}, {
				"name": "constant.language.interrupt.at2",
				"match": "(?i)i_(destruct|reset|locate|keepshift|overburn|id|timer|angle|tid|targetid|tinfo|targetinfo|ginfo|gameinfo|rinfo|robotinfo|collisions|resetcolcnt|transmit|receive|dataready|clearcom|kills|deaths|clearmeters)"
			}, {
				"name": "constant.language.other.at2",
				"match": "(?i)(MININT|MAXINT)"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "meta.preprocessor.message.at2",
				"match": "(?i)#msg[^;]+"
			}, {
				"name": "meta.preprocesser.config.at2",
				"match": "(?i)#config [^;]+=+[^;]"
			}, {
				"name": "meta.preprocessor.define.at2",
				"match": "(?i)#def \\b\\w+\\b",
				"captures": {
					"0": {
						"patterns": [{
							"include": "#variable"
						}]
					}
				}
			}]
		},
		"variable": {
			"patterns": [{
				"name": "variable.name.at2",
				"match": "\\b\\w+\\b"
			}]
		}
	},
	"scopeName": "source.at2"
}